<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/design_default_color_surface"
    tools:context=".fragment.PesanFragment">
 <androidx.cardview.widget.CardView
     android:elevation="20dp"
     app:cardCornerRadius="20dp"
     android:layout_margin="10dp"
     android:id="@+id/cardajukanpembatalan"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
  <TextView
      android:textColor="@color/design_default_color_error"
      android:layout_margin="4dp"
      android:textStyle="bold"
      android:gravity="center"
      android:text="Ajukan pembatalan disini"
      android:layout_width="match_parent"
      android:layout_height="30sp"/>


 </androidx.cardview.widget.CardView>

 <androidx.cardview.widget.CardView
     android:elevation="20dp"
     app:cardCornerRadius="20dp"
     android:backgroundTint="#4E9FAE"
     android:layout_margin="10dp"
     android:id="@+id/cardtransaksiberhasil"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
  <TextView
      android:textColor="@color/design_default_color_on_primary"
      android:layout_margin="4dp"
      android:textStyle="bold"
      android:gravity="center"
      android:text="Pesanan Berhasil"
      android:layout_width="match_parent"
      android:layout_height="30sp"/>


 </androidx.cardview.widget.CardView>


 <androidx.recyclerview.widget.RecyclerView

     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:id="@+id/recylerviewpesan"
 />


</LinearLayout>