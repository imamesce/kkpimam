<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".activity.KonfirmasiPembatalan">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relative_layout_progress_order1"
        android:background="@android:color/primary_text_dark"
        android:alpha="0.7"
        android:clickable="true"
        android:visibility="gone">
    <ProgressBar
        android:indeterminateTint="@color/ic_launcher_background"
        android:id="@+id/progressbarorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        tools:ignore="MissingConstraints" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView

        android:id="@+id/cardView5"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="4dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textpesannama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_namaorder"
                android:drawablePadding="10dp"
                android:text="namawisata"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/keterangan" />

            <TextView
                android:id="@+id/idwaktu"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:drawableLeft="@drawable/ic_baseline_access_time_24"
                android:drawablePadding="10dp"
                android:text="desember-22-2222 jam 03.03.03 wib"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/orderketeranganwisata" />

            <TextView
                android:id="@+id/orderketeranganwisata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="7dp"
                android:text="Paket Wisata yy bali selama 1 hari,sudah termasuk kendaraan,makan,dan penginapan...Untuk request lain nya/pertanyaan.. silahkan hubungi admin"
                app:layout_constraintBottom_toTopOf="@+id/idwaktu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.441"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textpesannama" />

            <TextView
                android:id="@+id/keterangan"
                android:layout_width="200dp"

                android:layout_height="20dp"
                android:layout_marginStart="20dp"

                android:layout_marginTop="17dp"
                android:drawableLeft="@drawable/ic_namaorder"
                android:drawablePadding="10dp"
                android:text="MenungguhiPembayaran"
                android:textColor="@color/design_default_color_error"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/hargawisata"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="25dp"
                android:text="123456789"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textpesannama"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:drawableLeft="@drawable/ic_baseline_notifications_active_24"
                android:text="Rp."
                app:layout_constraintBottom_toBottomOf="@+id/hargawisata"
                app:layout_constraintEnd_toStartOf="@+id/hargawisata"
                app:layout_constraintTop_toTopOf="@+id/hargawisata" />

            <TextView
                android:id="@+id/textView13"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="Harap Bersabar ketika sudah di proses"
                android:textColor="@color/design_default_color_error"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idwaktu"
                tools:layout_editor_absoluteX="118dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/buttonajukanpembatalan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajukan Pembatalan "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="214dp"
        android:layout_marginBottom="152dp"
        android:gravity="center"
        android:text="Potongan sebesar 30 % \n Untuk mengajukan pembatalan \n dari total yang dibayar \n Jika setuju silahkan Ajukan"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonajukanpembatalan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView5" />

</androidx.constraintlayout.widget.ConstraintLayout>
